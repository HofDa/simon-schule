---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import BentoGrid from '../components/BentoGrid.astro';
import Testimonials from '../components/Testimonials.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/shared/Footer.astro';

const title = "TRIAS SCHULE | Moderne Lernräume & Schulausstattung Südtirol";
const description = "Vom Klassenzimmer bis zum Fachraum: TRIAS ist Ihr Partner für ergonomische und zukunftsorientierte Schulausstattung in Südtirol. Jetzt Fachberatung anfragen.";
---

<Layout title={title} description={description}>
    <Navbar />

    <main class="relative bg-white">
        <div class="relative z-10">
            <Hero />
        </div>

        <div class="relative z-20">
            <Stats />
        </div>

        <div class="relative z-10">
            <BentoGrid />
        </div>

        <div class="relative z-10">
            <Testimonials />
        </div>

        <div class="relative z-20">
            <Contact />
        </div>
    </main>

    <Footer />
</Layout>

<style is:global>
    :root {
        --trias-navy: #0F172A; /* Slate-900 */
        --trias-power: #0066B2;
    }

    html {
        scroll-behavior: smooth;
        /* Verhindert horizontales Wackeln bei Animationen */
        overflow-x: hidden;
    }

    body {
        /* Verbessert das Font-Rendering auf MacOS/iOS */
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeLegibility;
    }

    /* Optimiertes Scroll-Padding für Anker-Links 
       Verhindert, dass die Fixed Navbar die Überschrift verdeckt.
    */
    section[id] {
        scroll-margin-top: 6rem;
    }

    /* Selection Color passend zum Branding */
    ::selection {
        background-color: rgba(0, 102, 178, 0.2);
        color: #0F172A;
    }
</style>