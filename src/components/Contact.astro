              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  /**
   * Intersection Observer Logik f√ºr den Reveal-Effekt.
   * TypeScript-konform implementiert.
   */
  function initContactReveal(): void {
    const observerOptions: IntersectionObserverInit = {
      threshold: 0.15, // Ausl√∂sen wenn 15% sichtbar sind
      rootMargin: "0px 0px -50px 0px"
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const target = entry.target as HTMLElement;
          target.classList.remove('opacity-0', 'translate-y-12');
          // Nach der Animation stoppen wir das Beobachten f√ºr bessere Performance
          observer.unobserve(target);
        }
      });
    }, observerOptions);

    const contactSection = document.querySelector('.reveal-contact');
    if (contactSection) {
      observer.observe(contactSection);
    }
  }

  // Initialer Aufruf
  initContactReveal();

  // Support f√ºr Astro View Transitions (falls genutzt)
  document.addEventListener('astro:after-swap', initContactReveal);
</script>

<style>
  /* Optimierung f√ºr fl√ºssiges Rendering auf High-DPI Displays */
  .reveal-contact {
    will-change: transform, opacity;
    backface-visibility: hidden;
  }
</style>