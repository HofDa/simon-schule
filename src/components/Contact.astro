        <div class="lg:w-5/12 relative h-80 lg:h-auto overflow-hidden">
          <img 
            src={repImage} 
            alt="Beratung und Planung TRIAS" 
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-[3000ms] hover:scale-110"
          />
