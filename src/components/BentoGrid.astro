---
interface BentoItem {
  title: string;
  category: string;
  size: 'large' | 'small' | 'tall';
  image: string;
  link: string;
  description: string;
}

const items: BentoItem[] = [
  {
    title: "Moderne Klassenzimmer",
    category: "Lernumgebungen",
    size: 'large',
    image: "https://images.unsplash.com/photo-1580582932707-520aed937b7b?q=80&w=1200&auto=format&fit=crop",
    link: '#',
    description: "Ergonomische Konzepte für konzentriertes Lernen und kollaboratives Arbeiten."
  },
  {
    title: "Naturwissenschaften",
    category: "Fachräume",
    size: 'small',
    image: "https://images.unsplash.com/photo-1582733754197-d1ad1690554d?q=80&w=600&auto=format&fit=crop",
    link: '#',
    description: "Sicherheit und modernste Technik für Chemie- und Biologieräume."
  },
  {
    title: "Nachhaltiges Design",
    category: "Philosophie",
    size: 'tall',
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=800&auto=format&fit=crop",
    link: '#',
    description: "Hochwertige, langlebige Materialien aus der Region."
  },
  {
    title: "Pausen & Lounge",
    category: "Wohlfühlen",
    size: 'small',
    image: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=600&auto=format&fit=crop",
    link: '#',
    description: "Räume zur Regeneration und für den informellen Austausch."
  }
];
---

<section id="loesungen" class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="mb-16 reveal-header opacity-0 translate-y-8 transition-all duration-1000">
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div class="max-w-2xl">
          <h2 class="text-4xl md:text-5xl font-extrabold text-trias-navy tracking-tighter mb-4">
            Lösungen für <span class="text-trias-power italic">jede Anforderung.</span>
          </h2>
          <p class="text-slate-500 text-lg">Funktionale Ästhetik für Südtiroler Bildungsräume.</p>
        </div>
        <div class="w-24 h-1.5 bg-[#0066B2] rounded-full"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 md:grid-rows-2 gap-6 h-full md:h-[800px]">
      {items.map((item, index) => (
        <a 
          href={item.link}
          class={`bento-card group relative overflow-hidden rounded-[2.5rem] bg-slate-100 opacity-0 translate-y-12 transition-all duration-1000 ease-out
            ${item.size === 'large' ? 'md:col-span-2 md:row-span-1' : ''}
            ${item.size === 'small' ? 'md:col-span-1 md:row-span-1' : ''}
            ${item.size === 'tall' ? 'md:col-span-1 md:row-span-2' : ''}
          `}
          style={`transition-delay: ${index * 150}ms;`} 
        >
          <div class="absolute top-10 left-0 w-1.5 h-12 bg-[#0066B2] z-30 -translate-x-full transition-transform duration-500 group-hover:translate-x-0"></div>

          <div class="absolute inset-0 z-0">
            <img 
              src={item.image} 
              alt={item.title}
              class="w-full h-full object-cover transition-transform duration-[1.5s] ease-out group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-trias-navy/95 via-trias-navy/30 to-transparent transition-opacity duration-500 group-hover:opacity-80"></div>
          </div>

          <div class="absolute inset-0 z-10 p-8 md:p-10 flex flex-col justify-end">
            <span class="text-trias-power text-xs font-black uppercase tracking-[0.2em] mb-3 transform translate-y-4 opacity-0 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100">
              {item.category}
            </span>
            <h3 class="text-white text-2xl md:text-3xl font-bold mb-3 leading-tight tracking-tight">
              {item.title}
            </h3>
            <p class="text-slate-300 text-sm md:text-base opacity-0 max-h-0 overflow-hidden transition-all duration-700 ease-in-out group-hover:opacity-100 group-hover:max-h-24 leading-relaxed">
              {item.description}
            </p>
            
            <div class="mt-4 flex items-center gap-2 text-white/50 text-xs font-bold uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity duration-700">
              Details ansehen
              <svg class="w-4 h-4 translate-x-0 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  function initBentoReveal() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px"
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Header einblenden
          if (entry.target.classList.contains('reveal-header')) {
            entry.target.classList.remove('opacity-0', 'translate-y-8');
          }
          // Bento Cards einblenden
          if (entry.target.classList.contains('bento-card')) {
            entry.target.classList.remove('opacity-0', 'translate-y-12');
          }
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Beobachte Header und Karten
    document.querySelectorAll('.reveal-header, .bento-card').forEach(el => observer.observe(el));
  }

  // Initialisierung
  initBentoReveal();
  document.addEventListener('astro:after-swap', initBentoReveal);
</script>

<style>
  .bento-card {
    will-change: transform, opacity;
  }
</style>